/* pages/home/home.wxss */
.bg{
  height:100vh;
}
.bgImg{
  width: 100vw;
  height:100vh;
  position: absolute;
}
.flex-wrp{
  width: 90vw;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.flex-item,.flex-item-hidden{
  width: 20vw;
  height: 20vw;
  border: 1px solid #e1e1e1;
  margin-bottom: 2.5vw;
  transform: rotateY(0deg);
  transition: 1s;
}
.flex-item{
  background: #242424;
}
.flex-item-hidden{
  position: absolute;
  margin-top: -23vw;
  opacity: 0;
  transform: rotateY(180deg);
}
.hiddenImg{
  width:100%;
  height:100%;
}
.flex-item-hidden.checked{
  transform: rotateY(0deg);
  opacity: 1;
  transition:transform 1s,opacity 1.5s;
}
.flex-item.checked{
  transform: rotateY(180deg);
  opacity: 0;
  transition:transform 1s,opacity 1.5s;
  z-index:2;
}
@keyframes roll180{
from {transform: rotateY(0deg);opacity: 1;}
to {transform: rotateY(180deg);opacity: 0;}
}
@keyframes roll0{
from {transform: rotateY(0deg);}
to {transform: rotateY(180deg);display: none;}
}
@keyframes opa
{
0%   {opacity: 0.85;}
50%  {opacity: 0.9;}
100% {opacity: 1;}
}